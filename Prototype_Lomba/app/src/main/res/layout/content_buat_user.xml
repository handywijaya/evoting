<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.handy.audy.daud.alfian.prototype_lomba.activity.BuatUserActivity"
    tools:showIn="@layout/activity_buat_user">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Buat Akun"
        android:id="@+id/textView3"
        android:layout_marginTop="103dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtIdKtp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:enabled="false" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtPassword"
        android:hint="Sandi"
        android:inputType="textPassword"
        android:layout_below="@+id/txtEmail"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtConfirmPassword"
        android:hint="Konfirmasi Sandi"
        android:inputType="textPassword"
        android:layout_below="@+id/txtPassword"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Buat Akun"
        android:id="@+id/btnBuatAkun"
        android:layout_below="@+id/txtConfirmPassword"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btnborder"
        style="@style/btnDefault" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtEmail"
        android:enabled="true"
        android:singleLine="true"
        android:layout_below="@+id/txtIdKtp"
        android:layout_alignParentStart="true"
        android:hint="Alamat Surel" />
</RelativeLayout>
